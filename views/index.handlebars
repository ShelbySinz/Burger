<div class = "container">

  <div class = "jumbotron">
    <br>
    <br>
    <h1 style = "color:aliceblue">Welcome to build a burger</h1>
    <br>
  </div>
  
  
  
<div class =" row">
    <div class = "col-md-6">
        <div class="card thecards">
  <div class="card-body">
    <h2>Freshly made burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block newDevoured=true}}
    {{/unless}}
  {{/each}}
</ul>
  </div>
</div>
     </div>

       <div class = "col-md-6">
        <div class="card thecards">
  <div class="card-body">
    <h2>Burgers you ate!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block newDevoured=false}}
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>
     </div>
</div>
<hr>

     <div class= "row">
       <div class = "col-md-4 .offset-md-4 ">
     <div class="card thecards">
  <div class="card-body">
<h2>Create Your Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten?<br>
    <input type="radio" name="devoured" value="0"> Not eaten?
  </div>

  <button class = "btn btn-primary"type="submit">Cook that Burger!</button>
</form>

</div>
</div>
</div>
 </div>
     </div>